<div id="page3">
  <a id="highscore" class="smooth"></a>
  <div id="page3text">
    <p class="lead">High Scores<p>
        <table id="hss">
        <% for(var i = 0; i < 10; i++) { %>
            <% if(i >= scores.length) {%>
            <tr>
                <td><%= i + 1 %>.</td>
                <td></td>
            </tr>
            <% } %>

            <% if(i < scores.length && scores[i].name == user[0].name) {%>
            <span id="users_score">
                <tr>
                    <td id="users_score"><%= i + 1 %>.</td>
                    <td id="users_score" class="name">
                        <%=scores[i].name %> (<%=scores[i].highscore %>)
                    </td>
            </span><br>
            <% } %>

            <% if(i < scores.length && scores[i].name != user[0].name) {%>
            <tr>
                <td><%= i + 1 %>.</td>
                <td class="name"> 
                    <%=scores[i].name %> (<%=scores[i].highscore %>)<br>
                </td>
            </tr>
            <% } %>
        <% } %>
        </table>
    </div>
</div>

